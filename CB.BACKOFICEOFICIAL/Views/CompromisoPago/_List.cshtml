
@using CB.ENTIDADES
@model List<CompromisoPago>

<table id="agCompromisoPago" class="table table-bordered table-hover dataTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {

            foreach (var personaAsigandas in Model.OrderBy(s => s.compromisoPagoID))
            {
                <tr>
                    <td>@personaAsigandas.compromisoPagoID</td>
                    <td>@personaAsigandas.Nombre </td>
                    
                    <td>
                        <button type="button" data-id="@personaAsigandas.compromisoPagoID" onclick="details(@personaAsigandas.compromisoPagoID);" class="btn btn-xs btn-default"><samp class="glyphicon glyphicon-eye-open" /> &nbsp;</button>
                        <button type="button" data-id="@personaAsigandas.compromisoPagoID" onclick="edit(@personaAsigandas.compromisoPagoID);" class="btn btn-xs btn-warning"><samp class="glyphicon glyphicon-pencil" />&nbsp;</button>
                        <button type="button" data-id="@personaAsigandas.compromisoPagoID" onclick="delet(@personaAsigandas.compromisoPagoID);" class="btn btn-xs btn-danger"><samp class="glyphicon glyphicon-erase" />&nbsp;</button>

                    </td>
                </tr>

            }
        }
    </tbody>

</table>
<script>

@model List<CB.ENTIDADES.Alertas>

<table class="table  table-bordered table-hover dataTable" id="example1" >
    <thead>
        <tr>
            <th>
                CodCliente
            </th>
            <th>
                nombre
            </th>
            <th>
                Fecha Compromiso
            </th>
            <th>
                Descripcion
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.CodCliente
                    </td>
                    <td>
                        @item.Nombre
                    </td>
                    <td>
                        @item.FechaCompromiso
                    </td>
                    <td>
                        @item.Descripcion
                    </td>
                    <td>
                        @if (item.activo)
                        {
                            @*<button type="button" data-id="@cod" onclick="sms(@cod);" class="btn btn-xs btn-default"><i class="fa fa-comment"></i> &nbsp;</button>*@
                            <button type="button" data-id="@item.AsignacionClienteId" onclick="Change(@item.AsignacionClienteId);" class="btn btn-xs btn-default"><samp class="glyphicon glyphicon-eye-open" /> &nbsp;</button>
                            @*<button type="button" data-id="@cod" onclick="call(@cod);" class="btn btn-xs btn-danger"><i class="fa fa-tty"></i>&nbsp;</button>*@
                        }
                        else
                        {
                            @*<button type="button" data-id="@cod" onclick="sms(@cod);" class="btn btn-xs btn-default"><i class="fa fa-comment"></i> &nbsp;</button>*@
                            <button type="button" data-id="@item.AsignacionClienteId" class="btn btn-xs btn-default"><samp class="glyphicon glyphicon-eye-close" /> &nbsp;</button>
                            @*<button type="button" data-id="@cod" onclick="call(@cod);" class="btn btn-xs btn-danger"><i class="fa fa-tty"></i>&nbsp;</button>*@
                        }
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script>
    $(document).ready(function (e) {
        $('#example1').DataTable({
            "order": [[2, "desc"]]
        })
    });
</script>
